                                <div class="muted pull-left">可以选择的课程列表</div>
                            </div>
                            <div class="block-content collapse in">
                                <div class="span12">
                                   <div class="table-toolbar">
                                   
                                   </div>
                                    
                                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                        <thead>
                                            <tr>
                                            
                                                <th>课程题目</th>
                                                <th>课程开始时间</th>
                                                <th>课程结束时间</th>
                                                 <th>课程人数</th>
                                                <th>实际人数</th>
                                                <th>课程状态</th>
                                                 <th>查看课程</th>
                                                <th>加入课程</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                            @foreach (var item in (@ViewBag.Course as  List<CourseCenter.Models.Course>))
                                            {
                                                <tr class="odd gradeX">
                                              
                                                <td>@item.CourseName</td>
                                                <td>@item.BeginTime</td>
                                                <td class="center"> @item.EndTime </td>
                                                <td class="center">@item.CourseAttend</td>

                                                    <td class="center"> @item.RealAttend</td>

                                                <td class="center">
                                                              @{
                                                if (@item.CourseStatus==1){
                                                    
                                                    <text>
                                                    正在开课
                                                    </text>
                                                }else{
                                                    <text>
                                                    已结课
                                                    </text>
                                                }
                                                    }
                                                </td>
                                                <td style="text-align: center" ><a class="btn btn-success" href="/StudentCourse/StudentCoursesDetail?id=@item.Id"><i class="icon-heart icon-white"></i> Enter</a></td>
                    <td style="text-align: center" ><a class="btn btn-info" href="/StudentCourse/StudentCoursesSelect?id=@item.Id"><i class="icon-ok icon-white"></i>Select</a></td>

                                            </tr>
                                            }
                                            
                                            
                                        
                                         
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                    </div>
                        <!-- /block -->
                  </div>
              </div>
    }


