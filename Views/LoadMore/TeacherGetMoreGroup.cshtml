@{
    ViewBag.Title = "TeacherGetMoreGroup";
    Layout = "~/Views/Shared/CouserAndStudent.cshtml";
}


@section span9{
    <div class="span9" id="content">
        <div class="row-fluid">
            <!-- block -->
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <div class="muted pull-left">热门讨论列表</div>
                </div>
                <div class="block-content collapse in">
                    <div class="span12">
                        <div class="table-toolbar">
                            
                            
                        </div>
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                            <thead>
                                <tr>
                                    <th>讨论题目</th>
                                    <th>发帖人</th>
                                    <th>发帖时间</th>
                                    <th style="text-align: center">查看详细</th>
                                    <th style="text-align: center">赞</th>
                                    <th style="text-align: center">踩</th>
                                </tr>
                            </thead>
                            <tbody id="chartTable">

                                @{
                                      foreach (var courseTitle in (ViewBag.listCgt as List<CourseCenter.Models.CourseGroupTitle>))
                                  {
                                    <tr>
                                        <td>@courseTitle.CourseGroupCreatName </td>
                                        <td>@courseTitle.CourseGroupCreatAcount </td>
                                        <td>@courseTitle.CreatTime</td>
                                        <td style="text-align: center"><a class="btn btn-primary" href="/LoadMore/TeacherGetGroupDetail?id=@courseTitle.Id"><i class="icon-heart icon-white"></i>Enter</a></td>
                                        <td style="text-align: center"><a class="btn btn-success"><i class="icon-thumbs-up icon-white"></i>Like</a></td>
                                        <td style="text-align: center"><a class="btn btn-warning"><i class="icon-thumbs-down icon-white"></i>Unlike</a></td>
                                    </tr>
                                  }
                                  }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /block -->
        </div>
    </div>
}
