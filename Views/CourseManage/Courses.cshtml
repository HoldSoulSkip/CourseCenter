@{
    ViewBag.Title = "课程管理";
    Layout = "~/Views/Shared/CouserAndStudent.cshtml";
}


@section  span9{
    <div class="span9" id="content">
                  <div class="row-fluid">
                     <!-- block -->
                     <div class="block">
                            <div class="navbar navbar-inner block-header">
                                <div class="muted pull-left">课程列表</div>
                            </div>
                            <div class="block-content collapse in">
                                <div class="span12">
                                   <div class="table-toolbar">
                                      <div class="btn-group">
                                         <a href="/CourseManage/CourseNew/"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                                      </div>

                                 @*     <div class="btn-group pull-right">
                                         <button data-toggle="dropdown" class="btn dropdown-toggle">其他课程 <span class="caret"></span></button>
                                         <ul class="dropdown-menu">
                                            <li><a href="#">课程一</a></li>
                                            <li><a href="#">课程二</a></li>
                                            <li><a href="#">课程三</a></li>
                                         </ul>
                                      </div>*@
                                   </div>
                                    
                                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                        <thead>
                                            <tr>
                                              
                                                <th>课程题目</th>
                                                <th>课程开始时间</th>
                                                <th>课程结束时间</th>
                                                 <th>课程人数</th>
                                                <th>实际人数</th>
                                                <th>课程状态</th>
                                                  
                                                 <th>编辑课程</th>
                                                 <th>课程发布</th>
                                                <th>删除课程</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                            @foreach (var item in (@ViewBag.Course as  List<CourseCenter.Models.Course>))
                                            {
                                                <tr class="odd gradeX">
                                        
                                                <td>@item.CourseName</td>
                                                <td>@item.BeginTime</td>
                                                <td class="center"> @item.EndTime </td>
                                                <td class="center">@item.CourseAttend</td>
                                                    <td class="center"> @item.RealAttend</td>

                                                <td class="center">
                                                    @{
                                                if (@item.CourseStatus==1){
                                                    <text>
                                                    正在上课
                                                    </text>
                                                }else{
                                                        if (@item.CourseStatus==0)
                                                        {
                                                    <text>
                                                   尚未发布
                                                    </text>
                                                        }
                                                        else
                                                        {
                                                         <text>
                                                   已关闭
                                                    </text>
                                                        }
                                                }
                                                        }
                                                   

                                                </td>
                                                                               
                                                <td style="text-align: center" ><a class="btn btn-primary" href="/CourseManage/CoursesDetail?id=@item.Id"><i class="icon-refresh icon-white"></i> Edit</a></td>
                                                 <td style="text-align: center" ><a class="btn btn-success" href="/CourseManage/CoursesPublish?id=@item.Id"><i class="icon-heart icon-white"></i> Publish</a></td>
                    <td style="text-align: center" ><a class="btn btn-danger" href="/CourseManage/CoursesDelete?id=@item.Id"><i class="icon-remove icon-white"></i> Delete</a></td>

                                            </tr>
                                            }
                                            
                                            
                                        
                                         
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                    </div>
                        <!-- /block -->
                  </div>
              </div>
    }
  @section booterScript{
           
        <script src="~/Content/vendors/jquery-1.9.1.js"></script>
        <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/vendors/datatables/js/jquery.dataTables.min.js"></script>
      <script src="~/Content/assets/DT_bootstrap.js"></script>

        <script src="~/Content/assets/scripts.js"></script>
        
        <script>
        $(function() {
            
        });
        </script>
             }
